@model GCD0803TodoManagement.Models.Todo
@{
	ViewBag.Title = "Create";
}

<h2>Create a new Todo</h2>

@using (Html.BeginForm("Create", "Todoes", FormMethod.Post))
{
	<div class="form-group">
		@Html.LabelFor(m => m.Description)
		@Html.TextBoxFor(m => m.Description, new { @class = "form-control", @placeholder = "Enter Todo Description" })
	</div>
	<div class="form-group">
		@Html.LabelFor(m => m.DueDate)
		@Html.TextBoxFor(m => m.DueDate, new { @type = "date", @class = "form-control" })
	</div> <div class="form-group">
		@Html.LabelFor(m => m.Category)
		@Html.TextBoxFor(m => m.Category, new { @class = "form-control", @placeholder = "Enter Todo Cateogry" })
	</div>
	<div class="form-group">
		<button type="submit" class="btn btn-primary">Submit</button>
	</div>
}

